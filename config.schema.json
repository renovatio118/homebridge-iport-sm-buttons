{
  "pluginAlias": "IPortSMButtons",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "iPort Buttons"
      },
      "ip": {
        "title": "Device IP Address",
        "type": "string",
        "placeholder": "192.168.2.12"
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "default": 10001
      },
      "timeout": {
        "title": "Connection Timeout (ms)",
        "type": "integer",
        "default": 5000
      },
      "reconnectDelay": {
        "title": "Reconnect Delay (ms)",
        "type": "integer",
        "default": 5000
      },
      "triggerResetDelay": {
        "title": "Trigger Reset Delay (ms)",
        "type": "integer",
        "default": 500
      },
      "buttonMappings": {
        "title": "Button Mappings",
        "type": "array",
        "description": "Each mapping creates a virtual switch in HomeKit. When the button is pressed and the LED color matches the modeColor, the switch will trigger. You can use these switches in HomeKit automations.",
        "items": {
          "type": "object",
          "properties": {
            "buttonNumber": {
              "title": "Button Number (1â€“10)",
              "type": "integer",
              "minimum": 1,
              "maximum": 10
            },
            "modeColor": {
              "title": "LED Mode Color",
              "type": "string",
              "enum": ["yellow", "red", "green", "blue", "purple", "white", "any"],
              "default": "any"
            },
            "actionType": {
              "title": "Action Type",
              "type": "string",
              "enum": ["accessory", "url"],
              "default": "accessory"
            },
            "targetName": {
              "title": "Target Accessory Name",
              "type": "string"
            },
            "action": {
              "title": "Accessory Action",
              "type": "string",
              "enum": ["on", "off", "toggle"],
              "default": "toggle"
            },
            "url": {
              "title": "URL (for URL actions)",
              "type": "string",
              "placeholder": "http://192.168.2.50/api"
            },
            "method": {
              "title": "HTTP Method",
              "type": "string",
              "enum": ["GET", "POST"],
              "default": "GET"
            },
            "body": {
              "title": "POST Body",
              "type": "string"
            }
          },
          "required": ["buttonNumber", "modeColor", "actionType"]
        }
      }
    },
    "required": ["ip", "buttonMappings"]
  }
}
