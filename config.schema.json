{
  "pluginAlias": "IPortSMButtons",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "iPort SM Buttons Platform",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "iPort Buttons"
      },
      "ip": {
        "title": "Device IP",
        "type": "string",
        "placeholder": "192.168.2.12"
      },
      "port": {
        "title": "Port",
        "type": "integer",
        "default": 10001
      },
      "timeout": {
        "title": "Socket Timeout (ms)",
        "type": "integer",
        "default": 5000
      },
      "reconnectDelay": {
        "title": "Reconnect Delay (ms)",
        "type": "integer",
        "default": 5000
      },
      "triggerResetDelay": {
        "title": "Virtual Switch Reset Delay (ms)",
        "type": "integer",
        "default": 500
      },
      "buttonMappings": {
        "title": "Button Mappings",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "buttonNumber": {
              "title": "Button Number",
              "type": "integer",
              "minimum": 1,
              "maximum": 10
            },
            "modeColor": {
              "title": "Mode Color",
              "type": "string",
              "enum": ["any", "yellow", "red", "blue", "green", "purple", "white"],
              "default": "any"
            },
            "actionType": {
              "title": "Action Type",
              "type": "string",
              "enum": ["accessory", "url"],
              "default": "accessory"
            },
            "targetName": {
              "title": "Target Accessory Name",
              "type": "string",
              "condition": {
                "functionBody": "return model.actionType === 'accessory';"
              }
            },
            "action": {
              "title": "Accessory Action",
              "type": "string",
              "enum": ["on", "off", "toggle"],
              "default": "toggle",
              "condition": {
                "functionBody": "return model.actionType === 'accessory';"
              }
            },
            "url": {
              "title": "URL",
              "type": "string",
              "placeholder": "http://example.com/webhook",
              "condition": {
                "functionBody": "return model.actionType === 'url';"
              }
            },
            "method": {
              "title": "HTTP Method",
              "type": "string",
              "enum": ["GET", "POST"],
              "default": "GET",
              "condition": {
                "functionBody": "return model.actionType === 'url';"
              }
            },
            "body": {
              "title": "HTTP Body (for POST)",
              "type": "string",
              "condition": {
                "functionBody": "return model.actionType === 'url' && model.method === 'POST';"
              }
            }
          }
        }
      }
    }
  }
}
